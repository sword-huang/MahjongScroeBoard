        <Button android:id="@+id/button_5_5" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>

        <!-- Row 6 -->
        <TextView android:id="@+id/textview_6_1" android:text="總計" android:textSize="20sp"  android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <TextView android:id="@+id/total_2" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <TextView android:id="@+id/total_3" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <TextView android:id="@+id/total_4" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <TextView android:id="@+id/total_5" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>

        <!-- Row 7 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnSpan="5"
            android:gravity="center">

            <Button
                android:id="@+id/undo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上一步" />

            <Button
                android:id="@+id/redo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一步" />

            <Button
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除" />
        </LinearLayout>

    </GridLayout>
</androidx.core.widget.NestedScrollView>