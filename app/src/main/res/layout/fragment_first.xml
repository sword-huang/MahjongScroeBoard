<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="7">

        <!-- Row 1 -->
        <TextView android:id="@+id/textview_1_1" android:text="玩家" android:textSize="20sp"  android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <EditText android:id="@+id/edittext_player1" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp" android:textAlignment="center" android:textSize="20sp"/>
        <EditText android:id="@+id/edittext_player2" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp" android:textAlignment="center" android:textSize="20sp"/>
        <EditText android:id="@+id/edittext_player3" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp" android:textAlignment="center" android:textSize="20sp"/>
        <EditText android:id="@+id/edittext_player4" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp" android:textAlignment="center" android:textSize="20sp"/>

        <!-- Row 2 -->
        <TextView android:id="@+id/textview_2_1" android:text="玩家1" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <Button android:id="@+id/button_2_2" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <Button android:id="@+id/button_2_3" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <Button android:id="@+id/button_2_4" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <Button android:id="@+id/button_2_5" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>

        <!-- Row 3 -->
        <TextView android:id="@+id/textview_3_1" android:text="玩家2" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <Button android:id="@+id/button_3_2" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <Button android:id="@+id/button_3_3" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <Button android:id="@+id/button_3_4" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <Button android:id="@+id/button_3_5" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>

        <!-- Row 4 -->
        <TextView android:id="@+id/textview_4_1" android:text="玩家3" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <Button android:id="@+id/button_4_2" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
        <Button android:id="@+id/button_4_3" android:text="0" android:textSize="20sp" android:textAlignment="center" android:layout_width="65dp" android:layout_height="wrap_content" android:layout_margin="6dp"/>
